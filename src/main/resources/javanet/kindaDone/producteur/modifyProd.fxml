<AnchorPane prefHeight="428.0" prefWidth="510.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javanet.ModifyProd">
   <children>
      <TabPane fx:id="tabPane" prefHeight="428.0" prefWidth="510.0" stylesheets="@../../main.css" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab fx:id="signin" style="-fx-background-color: transparent;" text="username">
               <content>
                  <VBox alignment="CENTER" prefHeight="369.0" prefWidth="479.0" spacing="20.0">
                     <children>
                        <TextField fx:id="username" prefHeight="45.0" promptText="old username" style="-fx-background-color: trans; -fx-border-radius: 30; -fx-border-color: #F4C430;">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </TextField>
                        <PasswordField fx:id="pswd" prefHeight="45.0" promptText="nouveau username" style="-fx-background-color: trans; -fx-border-radius: 30; -fx-border-color: #F4C430;">
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </PasswordField>
                        <Button fx:id="btnsignin" mnemonicParsing="false" prefHeight="45.0" prefWidth="390.0" text="confirmer " />
                     </children>
                     <padding>
                        <Insets bottom="45.0" left="45.0" right="45.0" top="45.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab style="-fx-background-color: transparent;" text="password">
               <content>
                  <VBox alignment="CENTER" prefHeight="349.0" prefWidth="344.0" spacing="20.0">
                     <children>
                        <TextField prefHeight="45.0" promptText="old password " style="-fx-background-color: trans; -fx-border-color: #F4C430; -fx-border-radius: 70;">
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </TextField>
                        <TextField prefHeight="45.0" prefWidth="340.0" promptText="nv password " style="-fx-background-color: trans; -fx-border-color: #F4C430; -fx-border-radius: 70;">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </TextField>
                        <PasswordField prefHeight="45.0" promptText="confirm nv Password" style="-fx-background-color: trans; -fx-border-color: #F4C430; -fx-border-radius: 70;">
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </PasswordField>
                        <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="390.0" text="confirm" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="45.0" right="45.0" top="15.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </TabPane>
      <Label layoutX="10.0" layoutY="10.0" prefHeight="30.0" prefWidth="33.0">
         <graphic>
            <ImageView fx:id="logout" fitHeight="29.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../logout-icon.png" />
               </image>
            </ImageView>
         </graphic>
      </Label>
   </children>
</AnchorPane>
